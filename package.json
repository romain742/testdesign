{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Starting point for new projects",
  "private": true,
  "author": {
    "name": "Romain Perrot",
    "url": "https://github.com/romain742"
  },
  "homepage": "https://github.com/romain742/boilerplate",
  "repository": "romain742/boilerplate",
  "license": "MIT",
  "engines": {
    "node": ">=6.9"
  },
  "main": "index.js",
  "scripts": {
    "build:css": "postcss src/index.css -o dist/bundle.css",
    "build:js": "rollup -c rollup.config.js",
    "build:html": "htmlmin dist/build.html -o dist/index.html",
    "prebuild:html": "inline-source --compress false src/index.html > dist/build.html",
    "prebuild": "rm -rf dist",
    "build": "npm-run-all build:*",
    "postbuild": "rm dist/build.html dist/bundle.css dist/bundle.js"
  },
  "dependencies": {
    "@babel/preset-env": "^7.4.5",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "html-minifier-cli": "^0.1.0",
    "inline-source-cli": "^1.2.0",
    "mqpacker": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "postcss-csso": "^3.0.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-custom-properties": "^9.0.1",
    "postcss-import": "^12.0.1",
    "postcss-reporter": "^6.0.1",
    "rollup": "^1.16.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-babel-minify": "^9.0.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0"
  }
}
